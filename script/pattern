#Create a script to list out all the files in a directory matching to a pattern
#directory pdir was created with txt and csv files
#now if condition is there to check whether directory exsist or not
#then if directory exsist user is asked for the type of file/pattern he want to list
#according to that pattern is didplayed
#else message is given that directory does not EXSIST

#!/bin/bash
echo -n "directoryname"
read dirname
echo "$dirname"
if [ ! -d "$dirname" ]
then
    echo "directory doesn't exist."

exit 0

else

    echo "directory exists"

fi
echo -n "pattern"
read pattern
echo "$pattern"
ls  pattern| grep -E "$patternname"





